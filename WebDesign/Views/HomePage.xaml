<Window x:Class="Final.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home Page" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Menu -->
        <StackPanel Background="#F4F4F4" >
            <TextBlock FontSize="20" FontWeight="Bold" Text="Menu" Margin="0,0,0,20"/>
            <Button Content="My Account" Margin="0,5" Height="35"/>
            <Button Content="Trips" Margin="0,5" Height="35"/>
            <Button Content="Finance" Margin="0,5" Height="35"/>
            <Button Content="My Documents" Margin="0,5" Height="35"/>
            <Button Content="Dashboarding" Margin="0,5" Height="35"/>
            <Separator Margin="0,10"/>
            <Button Content="Settings" Margin="0,5" Height="35"/>
            <Button Content="Log out" Height="35"/>
        </StackPanel>

        <!-- Main Content -->
        <StackPanel Grid.Column="1" Margin="20">
            <!-- Header -->
            <TextBlock Text="Welcome, Yasmine Bouanane" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Slideshow -->
            <Grid Height="200">
                <Image Name="SlideshowImage" Stretch="UniformToFill" />
            </Grid>

            <!-- About Us Section -->
            <StackPanel Margin="0,30,0,0">
                <TextBlock Text="About Us" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock TextWrapping="Wrap" FontSize="14">
                    Description of the website
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
